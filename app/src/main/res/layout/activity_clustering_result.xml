<!--                            android:text="TP\n(True Positive)"-->
<!--                            android:textColor="#000000" />-->
<!--                    </TableRow> &lt;!&ndash; 3 end &ndash;&gt;-->
                </TableLayout>

                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:alpha="0.5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-light"
                    android:text="\u2022 Performance"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:alpha="0.5"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="*"
                    android:alpha="0.5">

                    <TableRow android:layout_marginBottom="5dp">
                        <TextView
                            android:gravity="center"
                            android:text="Accuracy"
                            android:fontFamily="monospace"
                            android:textColor="#000000">
                        </TextView>
                        <TextView
                            android:gravity="center"
                            android:text="Precision"
                            android:fontFamily="monospace"
                            android:textColor="#000000">
                        </TextView>
                        <TextView
                            android:gravity="center"
                            android:text="Recall"
                            android:fontFamily="monospace"
                            android:textColor="#000000">
                        </TextView>
                        <TextView
                            android:gravity="center"
                            android:text="F1-score"
                            android:fontFamily="monospace"
                            android:textColor="#000000">
                        </TextView>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:id="@+id/tv_accuracy"
                            android:gravity="center"
                            android:text="-"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:textColor="#000000">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_precision"
                            android:gravity="center"
                            android:text="-"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:textColor="#000000">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_recall"
                            android:gravity="center"
                            android:text="-"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:textColor="#000000">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_f1_score"
                            android:gravity="center"
                            android:text="-"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:textColor="#000000">
                        </TextView>
                    </TableRow>
                </TableLayout>

                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:alpha="0.5"/>

                <Button
                    android:id="@+id/btn_kmeans_go"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:foreground="@drawable/kmeans_ripple"
                    android:background="@drawable/btn_kmeans_step0"
                    android:stateListAnimator="@null"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"/>

                <LinearLayout
                    android:id="@+id/ll_k_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/btn_k2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_course_off"
                        android:text="k = 2"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/gray_a80" />

                    <Button
                        android:id="@+id/btn_k3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_course_off"
                        android:text="k = 3"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/gray_a80" />

                    <Button
                        android:id="@+id/btn_k4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_course_off"
                        android:text="k = 4"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/gray_a80" />
                </LinearLayout>

            </LinearLayout>

<!--            #### below is item 2222222222222222#################-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btn_ground_truth"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/spread" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ground Truth"
                    android:textColor="@color/wolfpack_red"
                    android:fontFamily="sans-serif"
                    android:textSize="28sp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <View
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:alpha="0.5" />

            <LinearLayout
                android:id="@+id/ll_ground_truth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.github.mikephil.charting.charts.ScatterChart
                    android:id="@+id/scatterChart_ground_truth"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-light"
                    android:lineSpacingMultiplier="1.05"
                    android:text="@string/pca_pca"
                    android:textSize="18sp" />

            </LinearLayout>

<!--            #### above is item 3333333333333333#################-->

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>